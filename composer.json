{
    "name": "shafi005/cpanel-whm-api",
    "description": "Manage WHM and cPanel servers with PHP",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Shaharia Azam",
            "email": "shaharia.azam@gmail.com"
        },
        {
            "name": "Shafi Muhammad",
            "email": "i.shafi.muhammad@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.2",
        "ext-curl": "*",
        "guzzlehttp/psr7": "^1.4",
        "php-http/client-implementation": "^1.0",
        "php-http/guzzle6-adapter": "^1.1"
    },
    "autoload": {
        "psr-4": {
            "PreviewTechs\\cPanelWHM\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PreviewTechs\\cPanelWHM\\Tests\\": "tests"
        }
    },
    "require-dev": {
        "mockery/mockery": "^0.9.9",
        "phpunit/phpunit": "~9.5",
        "php-http/mock-client": "^1.1",
        "squizlabs/php_codesniffer": "^3.3"
    },
    "scripts":{
        "phpcs": "vendor/bin/phpcs --standard=psr2 src/",
        "phpunit": "vendor/bin/phpunit"
    }
}
